{
  "info": {
    "_postman_id": "pizza-delivery-collection",
    "name": "Pizza Delivery API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{API_BASE}}/api/health",
          "host": ["{{API_BASE}}"],
          "path": ["api","health"]
        }
      },
      "response": []
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{adminEmail}}\",\n  \"password\": \"{{adminPassword}}\"\n}"
        },
        "url": { "raw": "{{API_BASE}}/api/auth/login", "host": ["{{API_BASE}}"], "path": ["api","auth","login"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var json = pm.response.json();",
              "if(json.token){",
              "  pm.environment.set(\"token\", json.token);",
              "  pm.environment.set(\"userId\", json.user._id);",
              "}",
              "pm.test(\"Status is 200\", function(){pm.response.to.have.status(200);});"
            ]
          }
        }
      ]
    },
    {
      "name": "Create Pizza Base (Admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"pizza-base\",\n  \"payload\": {\n    \"name\": \"Test Base\",\n    \"price\": 100,\n    \"size\": \"medium\",\n    \"baseType\": \"thin-crust\",\n    \"stockQuantity\": 50,\n    \"lowStockThreshold\": 5\n  }\n}"
        },
        "url": { "raw": "{{API_BASE}}/api/ingredients", "host": ["{{API_BASE}}"], "path": ["api","ingredients"] }
      },
      "event": [
        {
          "listen": "test",
          "script": { "exec": ["var json = pm.response.json(); if(json.data) pm.environment.set('baseId', json.data._id); pm.test('created', () => pm.response.to.have.status(201));"] }
        }
      ]
    },
    {
      "name": "Create Sauce (Admin)",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"type\": \"sauce\",\n  \"payload\": { \"name\": \"Tomato Sauce\", \"price\": 20, \"sauceType\": \"tomato\", \"stockQuantity\": 50 }\n}" },
        "url": { "raw": "{{API_BASE}}/api/ingredients" }
      },
      "event": [ { "listen": "test", "script": { "exec": ["var json = pm.response.json(); if(json.data) pm.environment.set('sauceId', json.data._id); pm.test('created', () => pm.response.to.have.status(201));"] } } ]
    },
    {
      "name": "Create Cheese (Admin)",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"type\": \"cheese\",\n  \"payload\": { \"name\": \"Mozzarella\", \"price\": 30, \"cheeseType\": \"mozzarella\", \"stockQuantity\": 50 }\n}" },
        "url": { "raw": "{{API_BASE}}/api/ingredients" }
      },
      "event": [ { "listen": "test", "script": { "exec": ["var json = pm.response.json(); if(json.data) pm.environment.set('cheeseId', json.data._id); pm.test('created', () => pm.response.to.have.status(201));"] } } ]
    },
    {
      "name": "Place Order",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"customer\": \"{{userId}}\",\n  \"pizzaConfiguration\": {\n    \"pizzaBase\": { \"ingredient\": \"{{baseId}}\", \"size\": \"medium\" },\n    \"sauce\": { \"ingredient\": \"{{sauceId}}\", \"quantity\": \"regular\" },\n    \"cheese\": { \"ingredient\": \"{{cheeseId}}\", \"quantity\": \"regular\" },\n    \"vegetables\": [],\n    \"meat\": []\n  },\n  \"quantity\": 1,\n  \"itemPrice\": 150,\n  \"tax\": 15,\n  \"totalAmount\": 165,\n  \"customerPhone\": \"0123456789\",\n  \"deliveryAddress\": { \"street\": \"Addr\", \"city\": \"City\", \"state\": \"State\", \"zipCode\": \"12345\" }\n}\n" },
        "url": { "raw": "{{API_BASE}}/api/orders" }
      },
      "event": [ { "listen": "test", "script": { "exec": ["var json = pm.response.json(); if(json.data) pm.environment.set('orderId', json.data._id); pm.test('order created', () => pm.response.to.have.status(201));"] } } ]
    },
    {
      "name": "Get Orders",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "url": { "raw": "{{API_BASE}}/api/orders?customerId={{userId}}", "query": [ { "key": "customerId", "value": "{{userId}}" } ] }
      }
    },
    {
      "name": "Update Order Status (Admin)",
      "request": {
        "method": "PATCH",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "body": { "mode": "raw", "raw": "{ \"status\": \"preparing\", \"notes\": \"Started prepping\" }" },
        "url": { "raw": "{{API_BASE}}/api/orders/{{orderId}}/status" }
      }
    }
  ],
  "event": [],
  "variable": [
    { "key": "API_BASE", "value": "http://localhost:5000" },
    { "key": "adminEmail", "value": "admin@example.com" },
    { "key": "adminPassword", "value": "Admin@123" }
  ]
}
